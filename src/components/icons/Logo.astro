---
export interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { class: className = '', size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'w-6 h-6',
  md: 'w-8 h-8',
  lg: 'w-12 h-12',
  xl: 'w-16 h-16'
};
---

<svg 
  class={`${sizeClasses[size]} ${className}`}
  viewBox="0 0 100 100" 
  fill="none" 
  xmlns="http://www.w3.org/2000/svg"
  aria-label="Iron Foundry Logo"
>
  <!-- Main foundry structure -->
  <rect x="20" y="60" width="60" height="30" fill="currentColor" class="text-steel-600" rx="2"/>
  
  <!-- Chimney -->
  <rect x="40" y="30" width="8" height="30" fill="currentColor" class="text-steel-700" rx="1"/>
  
  <!-- Smoke -->
  <circle cx="42" cy="25" r="2" fill="currentColor" class="text-steel-400" opacity="0.6"/>
  <circle cx="45" cy="20" r="1.5" fill="currentColor" class="text-steel-400" opacity="0.4"/>
  <circle cx="48" cy="15" r="1" fill="currentColor" class="text-steel-400" opacity="0.3"/>
  
  <!-- Gear elements -->
  <g transform="translate(65, 45)">
    <circle cx="0" cy="0" r="8" fill="currentColor" class="text-blueprint-500"/>
    <circle cx="0" cy="0" r="4" fill="currentColor" class="text-steel-100"/>
    <!-- Gear teeth -->
    <rect x="-1" y="-10" width="2" height="4" fill="currentColor" class="text-blueprint-500"/>
    <rect x="-1" y="6" width="2" height="4" fill="currentColor" class="text-blueprint-500"/>
    <rect x="-10" y="-1" width="4" height="2" fill="currentColor" class="text-blueprint-500"/>
    <rect x="6" y="-1" width="4" height="2" fill="currentColor" class="text-blueprint-500"/>
  </g>
  
  <!-- Rivets -->
  <circle cx="25" cy="65" r="1.5" fill="currentColor" class="text-steel-500"/>
  <circle cx="75" cy="65" r="1.5" fill="currentColor" class="text-steel-500"/>
  <circle cx="25" cy="85" r="1.5" fill="currentColor" class="text-steel-500"/>
  <circle cx="75" cy="85" r="1.5" fill="currentColor" class="text-steel-500"/>
  
  <!-- Molten metal -->
  <ellipse cx="50" cy="75" rx="15" ry="3" fill="currentColor" class="text-rust-500" opacity="0.8"/>
</svg>
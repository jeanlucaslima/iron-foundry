---
export interface Props {
  class?: string;
  open?: boolean;
}

const { class: className = '', open = false } = Astro.props;
---

<svg 
  class={`w-6 h-6 transition-transform duration-300 ${open ? 'rotate-90' : ''} ${className}`}
  fill="none" 
  stroke="currentColor" 
  viewBox="0 0 24 24"
  aria-hidden="true"
>
  <path 
    stroke-linecap="round" 
    stroke-linejoin="round" 
    stroke-width="2" 
    d={open 
      ? "M6 18L18 6M6 6l12 12" 
      : "M4 6h16M4 12h16M4 18h16"
    }
  />
</svg>
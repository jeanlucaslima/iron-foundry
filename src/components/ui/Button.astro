---
export interface Props {
  variant?: 'primary' | 'secondary' | 'danger' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  loading?: boolean;
  disabled?: boolean;
  href?: string;
  class?: string;
  type?: 'button' | 'submit' | 'reset';
}

const { 
  variant = 'primary', 
  size = 'md', 
  loading = false, 
  disabled = false,
  href,
  class: className = '',
  type = 'button',
  ...rest 
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-semibold transition-all duration-200 focus-visible industrial-border relative overflow-hidden';

const variantClasses = {
  primary: 'steel-panel text-blueprint-700 hover:bg-blueprint-50 hover:text-blueprint-800 active:bg-blueprint-100',
  secondary: 'steel-panel text-steel-700 hover:bg-steel-100 hover:text-steel-800 active:bg-steel-200',
  danger: 'steel-panel text-rust-700 hover:bg-rust-50 hover:text-rust-800 active:bg-rust-100',
  ghost: 'text-steel-600 hover:text-steel-900 hover:bg-steel-100 active:bg-steel-200'
};

const sizeClasses = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-6 py-2.5 text-base',
  lg: 'px-8 py-3 text-lg'
};

const disabledClasses = 'opacity-50 cursor-not-allowed pointer-events-none';
const loadingClasses = 'cursor-wait';

const classes = [
  baseClasses,
  variantClasses[variant],
  sizeClasses[size],
  disabled && disabledClasses,
  loading && loadingClasses,
  className
].filter(Boolean).join(' ');

const Tag = href ? 'a' : 'button';
const tagProps = href ? { href } : { type, disabled: disabled || loading };
---

<Tag class={classes} {...tagProps} {...rest}>
  {loading && (
    <svg 
      class="w-4 h-4 mr-2 gear-animation" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
      />
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
      />
    </svg>
  )}
  <slot />
  
  <!-- Shine effect for primary buttons -->
  {variant === 'primary' && !disabled && !loading && (
    <div class="absolute inset-0 shine-overlay opacity-0 hover:opacity-100 transition-opacity duration-300" aria-hidden="true">
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-20 transform -skew-x-12 -translate-x-full animate-shine"></div>
    </div>
  )}
</Tag>

<style>
  .gear-animation {
    animation: var(--animate-gear-rotate);
  }
  
  @media (prefers-reduced-motion: reduce) {
    .gear-animation {
      animation: none;
    }
    .animate-shine {
      animation: none;
    }
  }
</style>
---
export interface Props {
  variant?: 'default' | 'elevated' | 'interactive';
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
}

const { 
  variant = 'default', 
  class: className = '',
  padding = 'md',
  ...rest 
} = Astro.props;

const baseClasses = 'steel-panel industrial-border relative overflow-hidden';

const variantClasses = {
  default: '',
  elevated: 'shadow-industrial',
  interactive: 'hover:shadow-industrial hover:-translate-y-1 transition-all duration-200 cursor-pointer'
};

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = [
  baseClasses,
  variantClasses[variant],
  paddingClasses[padding],
  className
].filter(Boolean).join(' ');
---

<div class={classes} {...rest}>
  <!-- Card Header Slot -->
  {Astro.slots.header && (
    <header class="mb-4 pb-4 border-b border-steel-300 dark:border-steel-700">
      <slot name="header" />
    </header>
  )}
  
  <!-- Card Body (Main Content) -->
  <div class="card-body">
    <slot />
  </div>
  
  <!-- Card Footer Slot -->
  {Astro.slots.footer && (
    <footer class="mt-4 pt-4 border-t border-steel-300 dark:border-steel-700">
      <slot name="footer" />
    </footer>
  )}
  
</div>
---
import { SITE_CONFIG } from '../utils/config';
import Logo from '../components/icons/Logo.astro';
import Gear from '../components/icons/Gear.astro';
import Button from '../components/ui/Button.astro';
import ArrowRight from '../components/icons/ArrowRight.astro';
import '../styles/global.css';
---

<html lang="en" data-theme="blueprint">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{SITE_CONFIG.title} - {SITE_CONFIG.description}</title>
		<meta name="description" content={SITE_CONFIG.description} />
	</head>
	<body class="min-h-screen">
		<!-- Skip link for accessibility -->
		<a href="#main-content" class="skip-link">Skip to main content</a>
		
		<!-- Header -->
		<header class="steel-panel p-6 industrial-border">
			<div class="max-w-6xl mx-auto flex items-center justify-between">
				<div class="flex items-center space-x-3">
					<Logo size="lg" />
					<div>
						<h1 class="text-2xl font-bold text-steel-900 font-technical">
							{SITE_CONFIG.title}
						</h1>
						<p class="text-steel-600 text-sm">{SITE_CONFIG.description}</p>
					</div>
				</div>
				<Gear animate={true} class="text-blueprint-500" />
			</div>
		</header>

		<!-- Main Content -->
		<main id="main-content" class="max-w-6xl mx-auto p-6">
			<!-- Hero Section -->
			<section class="text-center py-16 blueprint-grid">
				<h2 class="text-5xl font-bold text-steel-900 mb-4 font-technical">
					Industrial Strength
					<span class="text-blueprint-600">Web Development</span>
				</h2>
				<p class="text-xl text-steel-700 mb-8 max-w-3xl mx-auto">
					Built to Last, Engineered for Performance. Iron Foundry delivers robust, 
					high-performance websites with industrial-grade precision.
				</p>
				
				<!-- Industrial CTA Buttons -->
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<Button variant="primary" size="lg">
						Get Started
					</Button>
					<Button variant="ghost" size="lg" href="/blog">
						Read Blog
						<ArrowRight class="ml-2" />
					</Button>
				</div>
			</section>

			<!-- Features Grid -->
			<section class="py-16">
				<h3 class="text-3xl font-bold text-center text-steel-900 mb-12 font-technical">
					Engineered for Excellence
				</h3>
				<div class="grid md:grid-cols-3 gap-8">
					<!-- Performance Card -->
					<div class="steel-panel p-6 industrial-border">
						<div class="w-4 h-4 mb-4 bg-blueprint-500 rounded"></div>
						<h4 class="text-xl font-semibold text-steel-900 mb-3">Performance Optimized</h4>
						<p class="text-steel-700">Core Web Vitals optimized with lazy loading, critical CSS, and resource optimization</p>
					</div>

					<!-- Accessibility Card -->
					<div class="steel-panel p-6 industrial-border">
						<div class="w-4 h-4 mb-4 bg-rust-500 rounded"></div>
						<h4 class="text-xl font-semibold text-steel-900 mb-3">Accessibility First</h4>
						<p class="text-steel-700">WCAG 2.1 AA compliant with full keyboard navigation and screen reader support</p>
					</div>

					<!-- Industrial Design Card -->
					<div class="steel-panel p-6 industrial-border">
						<div class="w-4 h-4 mb-4 bg-steel-600 rounded"></div>
						<h4 class="text-xl font-semibold text-steel-900 mb-3">Industrial Design</h4>
						<p class="text-steel-700">Unique aesthetic with steel panels, gears, and blueprint themes</p>
					</div>
				</div>
			</section>

			<!-- Theme Demo -->
			<section class="py-16 text-center">
				<h3 class="text-3xl font-bold text-steel-900 mb-8 font-technical">
					Multiple Themes Available
				</h3>
				<div class="flex justify-center space-x-4 mb-8">
					<Button 
						onclick="setTheme('blueprint')"
						variant="primary"
						id="theme-blueprint"
					>
						Blueprint
					</Button>
					<Button 
						onclick="setTheme('dark')"
						variant="secondary"
						id="theme-dark"
					>
						Dark
					</Button>
					<Button 
						onclick="setTheme('light')"
						variant="secondary"
						id="theme-light"
					>
						Light
					</Button>
				</div>
				<p class="text-steel-600">Click the buttons above to test different themes!</p>
			</section>
		</main>

		<!-- Footer -->
		<footer class="steel-panel mt-16 py-12 industrial-border">
			<div class="max-w-6xl mx-auto px-6">
				<div class="grid md:grid-cols-4 gap-8 mb-8">
					<!-- Navigation -->
					<div>
						<h3 class="text-lg font-semibold text-steel-900 mb-4 font-technical">Navigation</h3>
						<ul class="space-y-2">
							<li><a href="/" class="text-steel-600 hover:text-steel-900 transition-colors">Home</a></li>
							<li><a href="/blog" class="text-steel-600 hover:text-steel-900 transition-colors">Blog</a></li>
							<li><a href="/components" class="text-steel-600 hover:text-steel-900 transition-colors">Components</a></li>
						</ul>
					</div>

					<!-- Resources -->
					<div>
						<h3 class="text-lg font-semibold text-steel-900 mb-4 font-technical">Resources</h3>
						<ul class="space-y-2">
							<li><a href="https://github.com/yourusername/iron-foundry" class="text-steel-600 hover:text-steel-900 transition-colors">GitHub</a></li>
							<li><a href="https://docs.astro.build" class="text-steel-600 hover:text-steel-900 transition-colors">Astro Docs</a></li>
							<li><a href="https://tailwindcss.com" class="text-steel-600 hover:text-steel-900 transition-colors">Tailwind CSS</a></li>
						</ul>
					</div>

					<!-- Community -->
					<div>
						<h3 class="text-lg font-semibold text-steel-900 mb-4 font-technical">Community</h3>
						<ul class="space-y-2">
							<li><a href="https://twitter.com/yourhandle" class="text-steel-600 hover:text-steel-900 transition-colors">Twitter</a></li>
							<li><a href="https://linkedin.com/in/yourprofile" class="text-steel-600 hover:text-steel-900 transition-colors">LinkedIn</a></li>
							<li><a href="https://github.com/yourusername/iron-foundry/discussions" class="text-steel-600 hover:text-steel-900 transition-colors">Discussions</a></li>
						</ul>
					</div>

					<!-- Status -->
					<div>
						<h3 class="text-lg font-semibold text-steel-900 mb-4 font-technical">Status</h3>
						<div class="flex items-center space-x-2 mb-4">
							<div class="w-2 h-2 bg-green-500 rounded-full"></div>
							<span class="text-sm font-mono text-steel-600">DEV</span>
						</div>
						<p class="text-steel-600 text-sm">All systems operational</p>
					</div>
				</div>

				<div class="border-t border-steel-300 dark:border-steel-700 pt-8 text-center">
					<p class="text-steel-700 mb-2">Built with machinery precision using Astro & Tailwind CSS</p>
					<p class="text-steel-600 text-sm">
						Created with ‚ù§Ô∏è by <strong>Jean Lucas Lima</strong> & <strong>Claude</strong> in Brazil üáßüá∑
					</p>
				</div>
			</div>
		</footer>

		<script>
			// Theme switching functionality
			function setTheme(theme) {
				const html = document.documentElement;
				
				console.log('Setting theme to:', theme);
				
				// Remove all theme classes and attributes
				html.classList.remove('dark', 'light', 'blueprint');
				html.removeAttribute('data-theme');
				
				// Force a reflow to ensure changes are applied
				html.offsetHeight;
				
				// Apply new theme
				if (theme === 'dark') {
					html.classList.add('dark');
					html.setAttribute('data-theme', 'dark');
					// Force background color
					html.style.backgroundColor = '#0f172a';
					html.style.color = '#f1f5f9';
				} else {
					html.setAttribute('data-theme', theme);
					html.classList.add(theme);
					// Reset inline styles for other themes
					html.style.backgroundColor = '';
					html.style.color = '';
				}
				
				console.log('HTML classes:', html.className);
				console.log('Data theme:', html.getAttribute('data-theme'));
				console.log('Background color:', getComputedStyle(html).backgroundColor);
				
				// Update button states
				updateThemeButtons(theme);
				
				// Save theme preference
				localStorage.setItem('iron-foundry-theme', theme);
			}
			
			function updateThemeButtons(activeTheme) {
				const buttons = ['blueprint', 'dark', 'light'];
				buttons.forEach(theme => {
					const button = document.getElementById(`theme-${theme}`);
					if (button) {
						// Reset button classes
						button.className = 'inline-flex items-center justify-center font-semibold transition-all duration-200 focus-visible industrial-border relative overflow-hidden steel-panel px-6 py-3';
						
						if (theme === activeTheme) {
							button.className += ' font-medium text-blueprint-700 bg-blueprint-50 border-blueprint-300';
						} else {
							button.className += ' font-medium text-steel-700 hover:bg-steel-100 border-steel-300';
						}
					}
				});
			}
			
			// Initialize theme on page load
			function initTheme() {
				const savedTheme = localStorage.getItem('iron-foundry-theme') || 'blueprint';
				console.log('Initializing theme:', savedTheme); // Debug log
				setTheme(savedTheme);
			}
			
			// Run on page load
			document.addEventListener('DOMContentLoaded', initTheme);
			
			// Make setTheme globally available
			window.setTheme = setTheme;
		</script>
	</body>
</html>
